{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "v9-js",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true, // разрешаем обрабатывать .js
    "noEmit": false // разрешаем вывод
  },
  "include": ["./v9/**/*.ts"]
}
